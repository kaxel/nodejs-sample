<!DOCTYPE html>
<html lang="en">
<head>
	<title>Node JS Sample</title>

    <!-- Custom styles for this template -->
    <link href="/assets/styles.css" rel="stylesheet" type="text/css"/>

    
	<meta charset="utf-8">
    <meta name="description" content="written for RVTD">
    <meta name="author" content="Krister Axel">

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"></script>
	<script src="/assets/names-list.js"></script>

    <!-- Favicon
    –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <link rel="shortcut icon" href="http://www.iconj.com/ico/z/6/z6zkji568o.ico" type="image/x-icon" />
</head>
<body>
	
  <div class="container">
	  <div class="row" id="toolbar">
		  <p><a id="show-input-link"><img src="assets/show-input-button.png"/></a><a id="show-list-link"><img src="assets/show-list-button.png"/></a></p>
	  </div>
	  <div class="row" id="main-form" style="display: none;">
		  <form method="POST">
			  <table class="table">
			    <tbody>
			      <tr>
			        <th scope="row">Name</th>
			        <td><input type="text" name="firstname" placeholder="firstname" required /></td>
			        <td><input type="text" name="lastname" placeholder="lastname" required /></td>
			      </tr>
			      <tr>
			        <th scope="row">Address</th>
			        <td colspan=2><input type="text" name="address_street" placeholder="your address" required /></td>
			      </tr>
			      <tr>
			        <th scope="row">City, state</th>
			        <td><input type="text" name="address_city" placeholder="City" required /></td>
			        <td><input type="text" name="address_state" placeholder="State" required /></td>
			      </tr>
			      <tr>
			        <th scope="row">zip</th>
			        <td><input type="text" name="address_zip" placeholder="Zip code" required /></td>
					<td><button type="submit">Add Record</button></td>
			      </tr>
			    </tbody>
			  </table>
		    
		    
		  </form>
	  </div>
	  <div class="row" id="hidden-main-list">
		  
		  <table class="table table-striped">
		    <thead>
		      <tr>
		        <th scope="col">#</th>
		        <th scope="col">First Name</th>
		        <th scope="col">Last Name</th>
		        <th scope="col">Address</th>
				<th scope="col">City</th>
				<th scope="col">State</th>
				<th scope="col">Zip</th>
		      </tr>
		    </thead>
		    <tbody>
	  		  <% for (var i=0; i < names.length; i++){%>
			      <tr>
			        <th scope="row"><%=i+1%></th>
			        <td><%=names[i].first%></td>
			        <td><%=names[i].last%></td>
			        <td><%=names[i].address%></td>
					<td><%=names[i].city%></td>
					<td><%=names[i].state%></td>
					<td><%=names[i].zip%></td>
			      </tr>
	  		  <% } %>
		    </tbody>
		  </table>
		  
		  
	  </div>
      
  </div>
  
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

  <!-- Optional theme -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

  <!-- Latest compiled and minified JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
	
</body>
</html>